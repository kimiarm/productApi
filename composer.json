{
  "name": "yourname/product-api",
  "description": "A REST API for managing products using PHP 8.2 with MongoDB/PostgreSQL",
  "type": "project",
  "require": {
    "php": "^8.2",
    "mongodb/mongodb": "^1.14",
    "ramsey/uuid": "^4.7",
    "symfony/http-foundation": "^6.3",
    "symfony/routing": "^6.3",
    "symfony/dependency-injection": "^6.3",
    "vlucas/phpdotenv": "^5.5",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-mongodb": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.2",
    "phpstan/phpstan": "^1.10",
    "fakerphp/faker": "^1.21"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "start": "php -S localhost:8000 -t public"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "stable"
}